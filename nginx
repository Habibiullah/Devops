server {
    server_name devapp.pharmalyfe.com;  # Replace with your actual domain or public IP

    location / {
        proxy_pass http://localhost:3000;  # This forwards requests to the container on port 3000
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/devapp.pharmalyfe.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/devapp.pharmalyfe.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    server_name devapi.pharmalyfe.com;  # Replace with your actual domain or public IP

    location / {
        proxy_pass http://localhost:5010;  # This forwards requests to the container on port 3000
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }



    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/devapi.pharmalyfe.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/devapi.pharmalyfe.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    if ($host = devapp.pharmalyfe.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name devapp.pharmalyfe.com devapi.pharmalyfe.com;
    return 404; # managed by Certbot


}



server {
    if ($host = devapi.pharmalyfe.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name devapi.pharmalyfe.com;
    listen 80;
    return 404; # managed by Certbot

